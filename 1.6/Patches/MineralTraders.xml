<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!--========== TRADERS ==========-->

<Operation MayRequire="ISA.RandomPatches" Class="PatchOperationSequence">
 <!-- <success>Always</success>  -->
    <operations>
      <!-- Add new caravan -->      <!-- Thank you Criz#2714 for the help with this patch -->

      <li Class="PatchOperationAdd">
        <xpath>/Defs/FactionDef[defName="OutlanderRoughStoneborn"]/caravanTraderKinds</xpath>
        <value>
          <li>ISA_Caravan_Minerals</li>
          <li MayRequire="ISA.Medieval">ISA_Caravan_Mythological</li>
        </value>
      </li>

<!-- Addons to the stock generator  -->

      <li Class="PatchOperationAdd">
        <xpath>/Defs/TraderKindDef[defName="ISA_Caravan_Minerals"]/stockGenerators</xpath>
        <value>
          
          <li Class="StockGenerator_SingleDef">
            <thingDef>ISA_MinersDelight</thingDef>
            <countRange>-5~15</countRange>
          </li>
      
          <li Class="StockGenerator_SingleDef">
            <thingDef>ISA_Glimmerquartz</thingDef>
            <countRange>-5~15</countRange>
          </li>

        </value>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>/Defs/TraderKindDef[defName="ISA_Orbital_Minerals"]/stockGenerators</xpath>
        <value>
          
          <li Class="StockGenerator_SingleDef">
            <thingDef>ISA_MinersDelight</thingDef>
            <countRange>-5~35</countRange>
          </li>
      
          <li Class="StockGenerator_SingleDef">
            <thingDef>ISA_Glimmerquartz</thingDef>
            <countRange>-5~35</countRange>
          </li>

        </value>
      </li>

  </operations>
</Operation>

</Patch>
