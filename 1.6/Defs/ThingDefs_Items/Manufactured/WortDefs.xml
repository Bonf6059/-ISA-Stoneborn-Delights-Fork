<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>ISA_ElixirMush</defName>
    <label>elixir mush</label>
    <description>Un-fermented elixir, with a very pungent odor. This substance needs to ferment in a fermenting barrel before it becomes drinkable beer.</description>
    <graphicData>
      <texPath>Things/Items/Manufactured/Wort/ElixirMush</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <healthAffectsPrice>false</healthAffectsPrice>
    <rotatable>false</rotatable>
    <stackLimit>25</stackLimit>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <statBases>
      <DeteriorationRate>1.0</DeteriorationRate>
      <MarketValue>3</MarketValue>
      <Mass>0.8</Mass>
      <Flammability>0.6</Flammability>
      <MaxHitPoints>60</MaxHitPoints>
    </statBases>
    <costList>
        <ISA_RawBullHorns>20</ISA_RawBullHorns>
        <ISA_RawBladeroot>10</ISA_RawBladeroot>
      </costList>
    <recipeMaker>
        <workSpeedStat>DrugCookingSpeed</workSpeedStat>
        <workSkill>Cooking</workSkill>
        <recipeUsers>
            <li>Brewery</li>
        </recipeUsers>
        <effectWorking>Cook</effectWorking>
        <soundWorking>Recipe_Brewing</soundWorking>
        <workAmount>1200</workAmount>
        <targetCountAdjustment>5</targetCountAdjustment>
    </recipeMaker>
    <tickerType>Rare</tickerType>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>8</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
  </ThingDef>

