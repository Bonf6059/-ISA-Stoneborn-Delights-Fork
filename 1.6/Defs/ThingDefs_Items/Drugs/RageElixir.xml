            <isCombatEnhancingDrug>true</isCombatEnhancingDrug>
            <listOrder>200</listOrder>
            <overdoseSeverityOffset>0.09~0.35</overdoseSeverityOffset>
            <largeOverdoseChance>0.005</largeOverdoseChance>
          </li>
        </comps>
