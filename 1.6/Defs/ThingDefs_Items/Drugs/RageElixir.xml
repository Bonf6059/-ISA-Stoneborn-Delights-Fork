            <li Class="IngestionOutcomeDoer_GiveHediff">
              <hediffDef>ISA_ElixirHigh</hediffDef>
              <severity>0.20</severity>
              <toleranceChemical>ISA_DwarvenDrink</toleranceChemical>
            </li>
            <li Class="IngestionOutcomeDoer_OffsetNeed">
              <need>Food</need>
              <offset>0.4</offset>
              <toleranceChemical>ISA_DwarvenDrink</toleranceChemical>
            </li>
          </outcomeDoers>
          </ingestible>
        <comps>
          <li Class="CompProperties_Drug">
            <chemical>ISA_DwarvenDrink</chemical>
            <addictiveness>0.016</addictiveness>
            <existingAddictionSeverityOffset>0.32</existingAddictionSeverityOffset>
