<Defs>

  <!-- Stoutcap -->
  
  <ThingDef ParentName="RoughPlantBase">
    <defName>ISA_RawStoutcap</defName>
    <label>stoutcap</label>
    <description>Raw stoutcap. A flavoring and preserving agent that is necessary for making shroom ale.</description>
    <possessionCount>10</possessionCount>
    <graphicData>
      <texPath>Things/Items/Resources/RawPlants/RawStoutcap</texPath>
    </graphicData>
    <statBases>
      <MarketValue>1.1</MarketValue>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>35</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <thingCategories>
      <li>PlantMatter</li>
    </thingCategories>
    <ingestible>
      <preferability>DesperateOnly</preferability>
      <canAutoSelectAsFoodForCaravan>false</canAutoSelectAsFoodForCaravan>
    </ingestible>
  </ThingDef>
  
