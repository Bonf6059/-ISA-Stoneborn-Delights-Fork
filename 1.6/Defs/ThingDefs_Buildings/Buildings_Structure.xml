<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<!--========================= Doors =============================-->

	<ThingDef ParentName="DoorBase">
		<defName>ISA_SlabDoor</defName>
		<label>slab door</label>
		<description>A block of stone repurposed as a slow and heavy door. Simple doors must be manually opened, which slows people down. The amount of slowdown depends on what the gate is made of.</description>
		<statBases>
			<MaxHitPoints>680</MaxHitPoints>
			<WorkToBuild>3000</WorkToBuild>
			<DoorOpenSpeed>0.4</DoorOpenSpeed>
		</statBases>
		<graphicData>
			<texPath>Things/Buildings/Structures/SlabDoor/SlabDoorSmall/SlabDoor_Mover</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<damageData>
				<enabled>false</enabled>
			</damageData>
		</graphicData>

		<stuffCategories Inherit="False">
			<li>Stony</li>
		</stuffCategories>
		<uiIconPath>Things/Buildings/Structures/SlabDoor/SlabDoorSmall/SlabDoor_MenuIcon</uiIconPath>
		<costStuffCount>55</costStuffCount>
		<designationHotKey>Misc1</designationHotKey>
	</ThingDef>

	<ThingDef ParentName="DoorBase">
		<defName>ISA_SlabDoor1x2c</defName>
		<label>slab door (1x2)</label>
		<description>Divides rooms. This large, heavy door requires adjacent walls to function.</description>
		<thingClass>Building_MultiTileDoor</thingClass>
		<statBases>
			<WorkToBuild>9000</WorkToBuild>
			<MaxHitPoints>340</MaxHitPoints>
			<DoorOpenSpeed>0.4</DoorOpenSpeed>
		</statBases>
		<graphicData>
		<texPath>Things/Buildings/Structures/SlabDoor/SlabDoorBig/SlabDoor1x2_Mover</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<!--shaderType>CutoutComplex</shaderType-->
		<damageData>
			<enabled>false</enabled>
		</damageData>
		</graphicData>
		<uiIconPath>Things/Building/Door/SlabDoor1x2/SlabDoor1x2_MenuIcon_south</uiIconPath>
		<useBlueprintGraphicAsGhost>true</useBlueprintGraphicAsGhost>
		<size>(2, 1)</size>
		<rotatable>true</rotatable>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
		<costStuffCount>75</costStuffCount>
		<stuffCategories Inherit="False">
			<li>Stony</li>
		</stuffCategories>
		<building>
		<blueprintClass>Blueprint_Build</blueprintClass>
		<blueprintGraphicData>
			<texPath>Things/Buildings/Structures/SlabDoor/SlabDoorBig/SlabDoor1x2_MenuIcon</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>EdgeDetect</shaderType>
			<drawSize>(3,2)</drawSize>
		</blueprintGraphicData>
		<doorTopGraphic>
			<texPath>Things/Buildings/Structures/SlabDoor/SlabDoorBig/SlabDoor1x2_Top</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3, 2)</drawSize>
		</doorTopGraphic>
		<doorSupportGraphic>
			<texPath>Things/Buildings/Structures/SlabDoor/SlabDoorBig/SlabDoor1x2_Support</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3, 2)</drawSize>
		</doorSupportGraphic>
		</building>
<!--		<researchPrerequisites>
		<li>ComplexFurniture</li>
		</researchPrerequisites>  -->
		<placeWorkers>
		<li>PlaceWorker_MultiCellDoor</li>
		</placeWorkers>
	</ThingDef>

	<!--========================= Column =============================-->
	<ThingDef ParentName="BuildingBase">
		<defName>ISA_RoyalColumn</defName>
		<label>royal column</label>
		<description>A beautiful gold-fitted column capable of holding a roof. Does not block sight or movement and looks quite nice.</description>
		<designationCategory>Structure</designationCategory>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.25</fillPercent>
		<pathCost>0</pathCost>

		<statBases>
			<MaxHitPoints>180</MaxHitPoints>
			<WorkToBuild>7500</WorkToBuild>
			<Mass>10</Mass>
			<Flammability>1.0</Flammability>
			<Beauty>30</Beauty>
		</statBases>

		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>20</costStuffCount>
		<costList>
			<Gold>20</Gold>
		</costList>

		<holdsRoof>true</holdsRoof>
		<canOverlapZones>false</canOverlapZones>
		<rotatable>false</rotatable>
		<fertility>0</fertility>
		<specialDisplayRadius>6.9</specialDisplayRadius><!-- must be kept in sync with roof hold-up radius -->
		<building>
			<isInert>true</isInert>
			<ai_chillDestination>false</ai_chillDestination>
		</building>

		<graphicData>
			<drawSize>(1,1.25)</drawSize>
			<drawOffset>(0,0,0.2)</drawOffset>
			<texPath>Things/Buildings/Structures/RoyalColumn/RoyalColumn</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<shadowData>
				<volume>(0.3, 0.5, 0.3)</volume>
				<offset>(0,0,-0.23)</offset>
			</shadowData>
			<damageData>
				<rect>(0.2,0.2,0.6,0.6)</rect>
			</damageData>
		</graphicData>
	</ThingDef>

</Defs>
