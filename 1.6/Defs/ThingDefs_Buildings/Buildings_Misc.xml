<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    
    <ThingDef ParentName="BuildingBase">
        <defName>ISA_ArtificialHive</defName>
        <label>insectiary</label>
        <thingClass>Building</thingClass>
        <description>An artificial hive, with a queen maggot inside. It slowly and constantly produces insect jelly, and spawns bothersome megascarabs.</description>
        <graphicData>
          <texPath>Things/Buildings/ArtificialHive/ArtificialHive</texPath>
          <graphicClass>Graphic_Single</graphicClass>
          <drawSize>1.6</drawSize>
        </graphicData>
        <uiIconScale>0.65</uiIconScale>
        <altitudeLayer>Building</altitudeLayer>
        <rotatable>false</rotatable>
        <fillPercent>0.5</fillPercent>
        <minifiedDef>MinifiedThing</minifiedDef>
        <stuffCategories>
          <li>Woody</li>
        </stuffCategories>
        <costStuffCount>50</costStuffCount>
        <costList>
          <ISA_QueenMaggot>1</ISA_QueenMaggot>
        </costList>
        <statBases>
            <MaxHitPoints>130</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <Mass>12</Mass>
        </statBases>
        <pathCost>42</pathCost>
        <blockWind>true</blockWind>
        <tickerType>Normal</tickerType>
        <passability>PassThroughOnly</passability>
        <killedLeavings>
          <InsectJelly>30</InsectJelly>
        </killedLeavings>
        <comps>
       <!--   <li Class="CompProperties_SpawnerPawn">
            <spawnablePawnKinds>
              <li>Megascarab</li>
            </spawnablePawnKinds>
            <spawnSound>Hive_Spawn</spawnSound>
            <initialPawnsPoints>20</initialPawnsPoints>
            <maxSpawnedPawnsPoints>300</maxSpawnedPawnsPoints>
          </li>	-->
          <li Class="CompProperties_Spawner">
            <thingToSpawn>InsectJelly</thingToSpawn>
            <spawnCount>20</spawnCount>
            <spawnIntervalRange>26000~30000</spawnIntervalRange>
            <spawnMaxAdjacent>80</spawnMaxAdjacent>
            <spawnForbidden>false</spawnForbidden>
            <saveKeysPrefix>jelly</saveKeysPrefix>
          </li>
          <li Class="CompProperties_HeatPusher">
            <heatPerSecond>6</heatPerSecond>
            <heatPushMaxTemperature>38</heatPushMaxTemperature>
          </li>
          <li Class="CompProperties_SpawnerFilth">
            <filthDef>Filth_Slime</filthDef>
            <spawnCountOnSpawn>5</spawnCountOnSpawn>
            <spawnMtbHours>4</spawnMtbHours>
            <spawnRadius>5</spawnRadius>
          </li>
        </comps>
        <designationCategory>Production</designationCategory>
        <thingCategories>
            <li>BuildingsProduction</li>
        </thingCategories>
  <researchPrerequisites>
   <li>ISA_DwarvenHiveKeeping</li>
  </researchPrerequisites>
      </ThingDef>

<ThingDef ParentName="BuildingBase">
  <defName>DV_Scrollshelf</defName>
  <label>scrollshelf</label>
  <description>An ancient looking scroll shelf, due to the lack of scrolls in the modern day it's mostly decorative.</description>
  <designationCategory>Furniture</designationCategory>
  <altitudeLayer>Building</altitudeLayer>
  <uiOrder>2040</uiOrder>
  <blockLight>false</blockLight>
  <passability>PassThroughOnly</passability>
  <castEdgeShadows>false</castEdgeShadows>
  <fillPercent>0.75</fillPercent>
  <pathCost>0</pathCost>
  <statBases>
    <MaxHitPoints>250</MaxHitPoints>
    <WorkToBuild>1550</WorkToBuild>
    <Mass>30</Mass>
    <Flammability>1.0</Flammability>
    <Beauty>5</Beauty>
    <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">10</StyleDominance>
  </statBases>
  <stuffCategories>
    <li>Woody</li>
    <li>Stony</li>
  </stuffCategories>
  <costStuffCount>130</costStuffCount>
  <holdsRoof>false</holdsRoof>
  <canOverlapZones>false</canOverlapZones>
  <rotatable>false</rotatable>
  <fertility>0</fertility>
  <building>
    <isInert>true</isInert>
    <ai_chillDestination>false</ai_chillDestination>
    <paintable>true</paintable>
  </building>
  <size>(2, 1)</size>
  <graphicData>
    <drawSize>(4,4)</drawSize>
    <drawOffset>(0,0,0.6)</drawOffset>
    <texPath>Things/Buildings/Scrollshelf</texPath>
    <graphicClass>Graphic_Random</graphicClass>
    <shaderType>CutoutComplex</shaderType>
    <shadowData>
      <volume>(1, 1, 1)</volume>
      <offset>(0,0,-0.23)</offset>
    </shadowData>
    <damageData>
      <rect>(0.2,0.2,0.6,0.6)</rect>
    </damageData>
  </graphicData>
</ThingDef>
    
</Defs>
