  <RecipeDef>
    <defName>ISA_MakeLiquorSmush</defName>
    <label>make forge smush</label>
    <description>Make forge smush from stoutcap and bull's horns, and a random chunk.</description>
    <jobString>Making wort.</jobString>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Brewing</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1000</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <researchPrerequisite>ISA_ProcessedDrugs</researchPrerequisite>
    <recipeUsers>
      <li>ElectricSmelter</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ISA_RawBullHorns</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ISA_RawStoutcap</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>StoneChunks</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ISA_RawStoutcap</li>
        <li>ISA_RawBullHorns</li>
      </thingDefs>
      <categories>
        <li>StoneChunks</li>
      </categories>
    </fixedIngredientFilter>
    <products>
      <ISA_LiquorSmush>5</ISA_LiquorSmush>
    </products>
  </RecipeDef>

  <RecipeDef>
    <defName>ISA_MakeElixirMush</defName>
    <label>make elixir mush</label>
    <description>Make elixir smush from bladeroot and bull's horns..</description>
    <jobString>Making elixir mush.</jobString>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Brewing</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1000</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <researchPrerequisite>ISA_ProcessedDrugs</researchPrerequisite>
    <recipeUsers>
      <li>Brewery</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ISA_RawBullHorns</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ISA_RawBladeroot</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ISA_RawStoutcap</li>
        <li>ISA_RawBladeroot</li>
      </thingDefs>
      <categories>
        <li>StoneChunks</li>
      </categories>
    </fixedIngredientFilter>
    <products>
      <ISA_ElixirMush>5</ISA_ElixirMush>
    </products>
  </RecipeDef>
</Defs>
